<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @person.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @person.last_name %>
</p>

<p>
	<% @person.phone_numbers.each do |phone| %>
		<li><%= phone.number %>
			<%= link_to('edit', edit_phone_number_path(phone)) %>
			<%= link_to('delete', phone, method: :delete) %>
		</li>
	<% end %>
</p>

<%= link_to 'Add phone number', new_phone_number_path(person_id: @person.id) %>

<p>
  <strong>email_address:</strong>
  <%= @person.first_name %>
</p>

<p>
	<% @person.email_addresses.each do |email| %>
		<li><%= email.email %>
			<%= link_to('edit', edit_email_address_path(email)) %>
			<%= link_to('delete', email, method: :delete) %>
		</li>
	<% end %>
</p>


<%= link_to 'Edit', edit_person_path(@person) %> 
<%= link_to 'Back', people_path %>
